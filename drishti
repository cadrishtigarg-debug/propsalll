        <div class="heart">‚ù§Ô∏è</div>
        <div class="heart">üíñ</div>
    </div>
    <div class="container">
        <h1>Will You Go on a Date with Me, Dhruv?</h1>
        <p id="message">Hey Dhruv, I've been thinking about you a lot, and I'd love to take you out to a park in the evening. What do you say?</p>
        <button class="yes" onclick="respond('yes')">Yes!</button>
        <button class="no" onclick="respond('no')">No, thanks.</button>
        <div id="response" class="response"></div>
        <button id="tryAgain" class="hidden" onclick="tryAgain()">Try Again?</button>
    </div>

    <script>
        let noCount = 0;
        const messages = [
            "Hey Dhruv, I've been thinking about you a lot, and I'd love to take you out to a park in the evening. What do you say?",
            "Come on, Dhruv, a walk in the park at sunset sounds perfect! Please say yes?",
            "Dhruv, you're amazing ‚Äì let's make some memories at the park tonight!",
            "Okay, one more try: Park date with me? Pretty please?",
            "Dhruv, I won't give up! Park in the evening, just you and me?"
        ];

        function respond(answer) {
            const responseDiv = document.getElementById('response');
            const tryAgainBtn = document.getElementById('tryAgain');
            if (answer === 'yes') {
                responseDiv.innerHTML = "Yay! Let's plan it soon. ‚ù§Ô∏è";
                responseDiv.style.color = "#4caf50";
                tryAgainBtn.classList.add('hidden');
            } else {
                noCount++;
                if (noCount < 5) {
                    responseDiv.innerHTML = "Aww, maybe I can change your mind? üòä";
                    responseDiv.style.color = "#f44336";
                    setTimeout(() => {
                        document.getElementById('message').innerHTML = messages[noCount];
                        responseDiv.innerHTML = "";
                        tryAgainBtn.classList.remove('hidden');
                    }, 2000);
                } else {
                    responseDiv.innerHTML = "Alright, I get it. No hard feelings! Maybe another time. üòä";
                    responseDiv.style.color = "#f44336";
                    tryAgainBtn.classList.add('hidden');
                }
            }
        }

        function tryAgain() {
            document.getElementById('response').innerHTML = "";
            document.getElementById('tryAgain').classList.add('hidden');
        }
    </script>
